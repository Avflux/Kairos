@page "/arquivos/pastas"

<PageTitle>Arquivos - Pastas - KAIROS</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">📁 Arquivos - Pastas</h1>
            <p class="lead text-center">Organize e gerencie suas pastas de arquivos</p>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">📂 Estrutura de Pastas</h5>
                    <p class="card-text">Visualize a estrutura das suas pastas</p>
                    <button class="btn btn-primary">Explorar Pastas</button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">🔍 Busca Avançada</h5>
                    <p class="card-text">Busque arquivos dentro das pastas</p>
                    <button class="btn btn-success">Buscar Arquivos</button>
                </div>
            </div>
        </div>
    </div>
</div>
